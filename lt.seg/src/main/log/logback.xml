<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false" scan="true" scanPeriod="120 seconds">
 	
 	<!-- >statusListener class="ch.qos.logback.core.status.NopStatusListener" /-->

	<jmxConfigurator />

	<appender name="sysout" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.err</Target>
		<encoder>
			<pattern>%d{ISO8601} %-5p %c{1}: %m%n</pattern>
		</encoder>
	</appender>

	<root level="error">
		<appender-ref ref="sysout" />
	</root>

	<logger name="de.tudarmstadt.lt.seg" additivity="false" level="${verbosity:-info}">
		<appender-ref ref="sysout" />
	</logger>

	<if condition='isDefined("logfile")'><then>

			<appender name="fileout" class="ch.qos.logback.core.FileAppender">
				<file>${logfile}</file>
				<append>true</append>
				<encoder>
					<pattern>%d{ISO8601} %-5p %c{1}: %m%n</pattern>
				</encoder>
			</appender>

			<logger name="de.tudarmstadt.lt.seg" additivity="false" level="${verbosity:-info}">
				<appender-ref ref="fileout" />
			</logger>

	</then></if>

</configuration> 